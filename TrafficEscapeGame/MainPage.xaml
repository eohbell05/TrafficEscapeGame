<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TrafficEscapeGame.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Traffic Escape">

    <Grid Padding="20">
        <!-- Background Image -->
        <Image Source="mainmenubackground.png"
               Aspect="Fill"
               Opacity="0.6"/>

        <!-- Content on top of background -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="3*" />
            </Grid.RowDefinitions>

            <!-- Title -->
            <Label
                Grid.Row="0"
                Text="Traffic Escape"
                FontSize="42"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center"
                FontAttributes="Bold"
                TextColor="White">
                <Label.Shadow>
                    <Shadow Brush="Black" Offset="3,3" Radius="5" Opacity="0.8"/>
                </Label.Shadow>
            </Label>

            <!-- Menu buttons -->
            <VerticalStackLayout
                Grid.Row="1"
                Spacing="15"
                VerticalOptions="Center"
                HorizontalOptions="Center">
                <Button
                    Text="Start Game"
                    WidthRequest="200"
                    BackgroundColor="#bba2ff"
                    TextColor="White"
                    FontSize="20"
                    HeightRequest="60"
                    CornerRadius="20"
                    Clicked="StartGame_Clicked" />
                <Button
                    Text="Settings"
                    WidthRequest="200"
                    BackgroundColor="#bba2ff"
                    TextColor="White"
                    FontSize="20"
                    HeightRequest="60"
                    CornerRadius="20"
                    Clicked="Settings_Clicked" />
                <Button
                    Text="Exit"
                    WidthRequest="200"
                    BackgroundColor="#bba2ff"
                    TextColor="White"
                    FontSize="20"
                    HeightRequest="60"
                    CornerRadius="20"
                    Clicked="Exit_Clicked" />
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>